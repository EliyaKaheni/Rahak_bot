def note_data(message):
    # try:
    global cache
    id = message.chat.id

    users_charkhak = Read_DataBase('Charkhak')
    users_mooshak = Read_DataBase('Mooshak')
    users = pd.DataFrame()
    if str(id) in users_charkhak['ID']:
        users = users_charkhak
    else:
        users = users_mooshak

    print(users)

    loc = been_before(cache[id][1], users['Books'].loc[users['ID']==id], message.chat.id)
    print(loc)

    if loc == -1:
        temp = Reading()
        temp.reading_dates.append(cache[id][0])
        temp.name = cache[id][1]
        temp.page += int(message.text)

        list(users['Books'].loc[users['ID']==id]).append(temp)
        del cache[id]

    else:
        list(users['Books'].loc[users['ID']==id])[loc].page += int(message.text)
        list(users['Books'].loc[users['ID']==id])[loc].reading_dates.append(cache[id][0])

    if str(users['League'].loc[users['ID']==id]) == 'Ú†Ø±Ø®Ú© âš™ï¸':
        Write_DataBase(users, 'Charkhak')
    else:
        Write_DataBase(users, 'Mooshak')

    main_menu(message)

    # except:
    #     error(message)

